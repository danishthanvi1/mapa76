<ul class="submenu-tools clearfix">
  <li class="tool first search-doc search-2">
    <input id="search" type="text" placeholder="Buscar{{#unless singleDocument}} Documentos{{/unless}}">
    <input type="button" value="" id="seachButton">
  </li>
  {{#if canUploadDocument}}
  <li class="tool upload-doc"><a id="upload" href="#">Subir Documento</a></li>
  <li class="tool upload-doc"><a id="links" href="#">Subir links</a></li>
  {{/if}}
  <li class="multi tool export-doc"><a id="export" href="#">Exportar</a></li>
  {{#if singleDocument}}
  <li class="multi tool download-doc"><a target="_blank" id="download" href="/documents/{{id}}/download">Descargar</a></li>
  {{/if}}
  {{#if canDeleteDocuments}}
  <li class="multi tool last trash-doc"><a id="delete" href="#">Eliminar</a></li>
  {{/if}}
</ul>
